<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Activity白色主题-->
    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorThemeWhite</item>
        <!--顶部导航栏颜色-->
        <item name="colorPrimary">@color/colorThemeWhite</item>
        <!--控件选中颜色-->
        <item name="colorAccent">@color/colorThemeBlack</item>
        <!--Toolbar title上的颜色-->
        <item name="android:textColorPrimary">@color/colorText3</item>
        <!--Toolbar 三个点菜单颜色-->
        <item name="android:textColorSecondary">@color/colorText3</item>
        <!--控件的默认颜色-->
        <item name="colorControlNormal">@color/colorText3</item>
        <!--按钮的默认颜色-->
        <item name="colorButtonNormal">@color/colorThemeWhite</item>
        <!--不才用大写英文-->
        <item name="android:textAllCaps">false</item>
        <!--高亮使用黑色文字-->
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <!--屏幕底部虚拟键颜色-->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorThemeWhite</item>
    </style>

    <!--Activity黑色主题-->
    <style name="AppThemeBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorThemeBlack</item>
        <item name="colorPrimary">@color/colorThemeBlack</item>
        <item name="colorAccent">@color/colorThemeBlack</item>
        <item name="android:textColorPrimary">@color/colorTextWhite</item>
        <item name="android:textColorSecondary">@color/colorTextWhite</item>
        <item name="colorControlNormal">@color/colorText3</item>
        <item name="colorButtonNormal">@color/colorText3</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorThemeBlack</item>
    </style>

